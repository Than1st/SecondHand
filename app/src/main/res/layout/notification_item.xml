<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/image_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="" />

    <TextView
        android:id="@+id/tv_tipe_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penawaran produk"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_product_image"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/iv_notif"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tipe_produk"
        app:layout_constraintBottom_toBottomOf="@id/tv_tipe_produk"/>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Apr, 14:04"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_tipe_produk"
        app:layout_constraintBottom_toBottomOf="@id/tv_tipe_produk"
        app:layout_constraintEnd_toStartOf="@id/iv_notif"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_nama_pembeli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jam Tangan Casio"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/tv_tipe_produk"
        app:layout_constraintStart_toStartOf="@id/tv_tipe_produk"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_harga_awal_produk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/rp_250_000"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pembeli"
        app:layout_constraintStart_toStartOf="@id/tv_tipe_produk"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_harga_ditawar_produk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Berhasil Ditawar Rp. 200.000"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/tv_harga_awal_produk"
        app:layout_constraintStart_toStartOf="@id/tv_tipe_produk"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_chat_via_wa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kamu akan segera dihubungi penjual via whatsapp"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_harga_ditawar_produk"
        app:layout_constraintStart_toStartOf="@id/tv_tipe_produk"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_via_wa"/>

</androidx.constraintlayout.widget.ConstraintLayout>