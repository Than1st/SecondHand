    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/desk_daftar"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jam"
            android:layout_marginStart="20dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_desk_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            android:fontFamily="@font/poppins_semibold"
            android:text="Penawaran Produk"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_desk_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 Apr, 14:04"
            android:layout_marginTop="20dp"
            android:layout_marginStart="300dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/desk_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Tangan Casio"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/tv_desk_one"
            android:layout_marginStart="25dp"
            />
        <TextView
            android:id="@+id/desk_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 250.000"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/desk_three"
            android:layout_marginStart="25dp"
            />
        <TextView
            android:id="@+id/desk_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ditawar Ep. 200.000"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/desk_four"
            android:layout_marginStart="25dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_one"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn"
        android:text="Terima"
        app:layout_constraintTop_toBottomOf="@id/header_daftar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_two"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Terima"
        android:background="@drawable/bg_btn_two"
        app:layout_constraintTop_toBottomOf="@id/header_daftar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        />


