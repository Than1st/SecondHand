<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group4.secondhand">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SecondHandApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_secondhand_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_secondhand_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecondHand">
        <activity
            android:name=".ui.OpeningActivity"
            android:exported="false"
            android:label="@string/title_activity_opening"
            android:theme="@style/Theme.SecondHand.NoActionBar">
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>